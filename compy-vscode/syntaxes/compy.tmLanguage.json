{
  "scopeName": "source.compy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.compy",
          "match": "\\b(def|if|else|return|class|__inline_c__|__inline_c_global__|include)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.compy",
          "match": "\\b(int|flt|char|str|bool|long|double)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.compy",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.compy",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.single.compy",
          "begin": "'",
          "end": "'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.compy",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.compy",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.compy",
          "match": "//.*$"
        }
      ]
    }
  }
}
